<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="textEnd"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:textSize="28dp"
        android:textColor="@color/light_gray"
         />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textColor="@color/light_gray"
        android:textSize="50dp"
        android:textAlignment="textEnd"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="AC"
            android:textSize="16dp"
            android:backgroundTint="@color/dark_liver"
            android:id="@+id/btn_AC"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="("
            android:textSize="16dp"
            android:backgroundTint="@color/dark_liver"
            android:id="@+id/btn_left"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"

            android:text=")"
            android:textSize="16dp"
            android:backgroundTint="@color/dark_liver"
            android:id="@+id/btn_right"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="/"
            android:textSize="16dp"
            android:backgroundTint="@color/orange"
            android:id="@+id/btn_bolme"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="7"
            android:textSize="16dp"
            android:backgroundTint="@color/Eerie_Black"
            android:id="@+id/btn_7"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="8"
            android:textSize="16dp"
            android:backgroundTint="@color/Eerie_Black"
            android:id="@+id/btn_8"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="9"
            android:textSize="16dp"
            android:backgroundTint="@color/Eerie_Black"
            android:id="@+id/btn_9"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="*"
            android:textSize="16dp"
            android:backgroundTint="@color/orange"
            android:id="@+id/btn_vurma"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="4"
            android:textSize="16dp"
            android:backgroundTint="@color/Eerie_Black"
            android:id="@+id/btn_4"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="5"
            android:textSize="16dp"
            android:backgroundTint="@color/Eerie_Black"
            android:id="@+id/btn_5"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="6"
            android:textSize="16dp"
            android:backgroundTint="@color/Eerie_Black"
            android:id="@+id/btn_6"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="-"
            android:textSize="16dp"
            android:backgroundTint="@color/orange"
            android:id="@+id/btn_cixma"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="1"
            android:textSize="16dp"
            android:backgroundTint="@color/Eerie_Black"
            android:id="@+id/btn_1"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="2"
            android:textSize="16dp"
            android:backgroundTint="@color/Eerie_Black"
            android:id="@+id/btn_2"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="3"
            android:textSize="16dp"
            android:backgroundTint="@color/Eerie_Black"
            android:id="@+id/btn_3"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="+"
            android:textSize="16dp"
            android:backgroundTint="@color/orange"
            android:id="@+id/btn_toplama"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <Button
            android:layout_width="172dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="0"
            android:textSize="16dp"
            android:backgroundTint="@color/Eerie_Black"
            android:id="@+id/btn_0"
            />

        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="."
            android:textSize="16dp"
            android:backgroundTint="@color/Eerie_Black"
            android:id="@+id/btn_vergul"
            />
        <Button
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:layout_margin="14dp"
            android:text="="
            android:textSize="16dp"
            android:backgroundTint="@color/orange"
            android:id="@+id/btn_beraber"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/by"
            android:textSize="30dp"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
